{
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Database=FaceGuardProDB;Username=postgres;Password=Danger124;Port=5432;",
    "TestConnection": "Host=localhost;Database=FaceGuardProTestDB;Username=postgres;Password=Danger124;Port=5432;Pooling=true;"
  },

  "JwtSettings": {
    "SecretKey": "YourSuperSecretKeyThatIsAtLeast32CharactersLongForJWTSigning!@#$%",
    "Issuer": "FaceGuardPro.API",
    "Audience": "FaceGuardPro.Client",
    "ExpirationInMinutes": 6000,
    "RefreshTokenExpirationInDays": 70
  },

  "FileStorage": {
    "BasePath": "Storage",
    "PhotosPath": "Photos",
    "TempPath": "Temp",
    "BackupPath": "Backup",
    "MaxFileSize": 10485760,
    "AllowedExtensions": [ ".jpg", ".jpeg", ".png", ".bmp", ".tiff", ".webp" ]
  },

  "Security": {
    "EnableRateLimiting": true,
    "MaxRequestsPerMinute": 100,
    "EnableCors": true,
    "AllowedOrigins": [ "http://localhost:3000", "https://localhost:5001" ]
  },

  "FaceDetection": {
    "MinFaceSize": 80,
    "MaxFaceSize": 800,
    "DetectionConfidence": 0.7,
    "QualityThreshold": 0.6,
    "ProcessingTimeout": 30
  },

  "Liveness": {
    "MinConfidence": 0.8,
    "BlinkThreshold": 0.25,
    "ChallengeTimeout": 30,
    "MaxAttempts": 3
  },

  "Authentication": {
    "FaceMatchThreshold": 0.85,
    "MaxFailedAttempts": 3,
    "LockoutDurationMinutes": 15
  },

  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore.Database.Command": "Warning",
      "FaceGuardPro": "Debug"
    },
    "Console": {
      "IncludeScopes": true,
      "TimestampFormat": "yyyy-MM-dd HH:mm:ss "
    },
    "File": {
      "Path": "Logs/faceguardpro-.log",
      "RollingInterval": "Day",
      "RetainedFileCountLimit": 30,
      "FileSizeLimitBytes": 10485760,
      "OutputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {SourceContext}: {Message:lj}{NewLine}{Exception}"
    }
  },

  "AllowedHosts": "*",

  "Cors": {
    "AllowedOrigins": [
      "http://localhost:3000",
      "http://localhost:8080",
      "http://localhost:5173"
    ],
    "AllowedMethods": [ "GET", "POST", "PUT", "DELETE", "OPTIONS" ],
    "AllowedHeaders": [ "*" ],
    "AllowCredentials": true
  },

  "FaceDetection": {
    "MinFaceSize": 50,
    "MaxFaceSize": 400,
    "ScaleFactor": 1.1,
    "MinNeighbors": 4,
    "QualityThreshold": 60,
    "MaxProcessingTimeMs": 5000,
    "ModelPath": "Models",
    "RecognitionThreshold": 75.0,
    "EnableLandmarks": true,
    "EnableQualityAssessment": true,
    "MaxFacesPerImage": 10
  },

  "Swagger": {
    "Title": "FaceGuard Pro API",
    "Version": "v1",
    "Description": "Employee facial recognition and authentication system API",
    "ContactName": "FaceGuard Pro Team",
    "ContactEmail": "support@faceguardpro.com"
  },

  "HealthChecks": {
    "EnableDetailedErrors": true,
    "DatabaseTimeoutSeconds": 30,
    "FileSystemCheckPath": "Storage"
  },
  "Performance": {
    "EnableCaching": true,
    "CacheExpirationMinutes": 30,
    "MaxConcurrentDetections": 5,
    "ProcessingTimeoutMs": 10000
  },

  "Monitoring": {
    "EnableHealthChecks": true,
    "EnableMetrics": true,
    "LogPerformanceMetrics": true,
    "StatisticsRetentionDays": 30
  }
}